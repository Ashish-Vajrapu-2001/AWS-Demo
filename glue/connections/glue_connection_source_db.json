        "SubnetIdList": [
            "{{PLACEHOLDER_SUBNET_ID_1}}",
            "{{PLACEHOLDER_SUBNET_ID_2}}"
        ],
        "SecurityGroupIdList": [
            "{{PLACEHOLDER_SECURITY_GROUP_ID}}"
        ],
        "AvailabilityZone": "{{PLACEHOLDER_AZ}}"
    }
}