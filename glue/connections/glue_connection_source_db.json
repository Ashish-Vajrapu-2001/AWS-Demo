{
    "Name": "glue_conn_source_db",
    "Description": "Connection to Source Database (Azure SQL via VPN)",
    "ConnectionType": "JDBC",
    "MatchCriteria": [],
    "ConnectionProperties": {
        "JDBC_CONNECTION_URL": "jdbc:sqlserver://src-server.database.windows.net:1433;databaseName=ERPDB",
